<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tg.base.tb.mapper.TbBotAdminManagerMapper">

    <resultMap id="BaseResultMap" type="com.tg.base.tb.entity.TbBotAdminManager">
            <id property="tgBotAdminId" column="tg__bot_admin_id" jdbcType="INTEGER"/>
            <result property="tbBotInstanceId" column="tb_bot_instance_id" jdbcType="INTEGER"/>
            <result property="tgUserId" column="tg_user_id" jdbcType="VARCHAR"/>
            <result property="grantEndDateTime" column="grant_end_date_time" jdbcType="TIMESTAMP"/>
            <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        tg__bot_admin_id,tb_bot_instance_id,tg_user_id,
        grant_end_date_time,create_user,create_time,
        update_user,update_time
    </sql>
    <delete id="deleteByBotIdAndUserTgId">
        delete
        from tb_bot_admin_manager

        where 1 = 1
          and tb_bot_instance_id = #{botId}
          and tg_user_id = #{userTgId}
    </delete>
    <select id="selectByBotIdAndOpratorUserTgId"
            resultType="com.tg.base.tb.entity.TbBotAdminManager">
        select
            tg__bot_admin_id,tb_bot_instance_id,tg_user_id,
            grant_end_date_time,create_user,create_time,
            update_user,update_time
        from tb_bot_admin_manager
        where 1 = 1
        and tb_bot_instance_id = #{botId}
        and tg_user_id = #{opratorUserTgId}
    </select>
</mapper>
