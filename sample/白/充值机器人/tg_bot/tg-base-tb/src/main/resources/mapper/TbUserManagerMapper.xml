<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tg.base.tb.mapper.TbUserManagerMapper">

    <resultMap id="BaseResultMap" type="com.tg.base.tb.entity.TbUserManager">
            <id property="tgUserId" column="tg_user_id" jdbcType="VARCHAR"/>
            <result property="userFirstName" column="user_first_name" jdbcType="VARCHAR"/>
            <result property="isBot" column="is_bot" jdbcType="TINYINT"/>
            <result property="userLastName" column="user_last_name" jdbcType="VARCHAR"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="languageCode" column="language_code" jdbcType="VARCHAR"/>
            <result property="userRole" column="user_role" jdbcType="INTEGER"/>
            <result property="createUser" column="create_user" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        tg_user_id,user_first_name,is_bot,
        user_last_name,user_name,language_code,
        user_role,create_user,create_time,
        update_user,update_time
    </sql>


    <select id="selectByTgUserName" resultType="com.tg.base.tb.entity.TbUserManager"
            parameterType="java.lang.String">
        select
            tg_user_id,user_first_name,is_bot,
            user_last_name,user_name,language_code,
            user_role,create_user,create_time,
            update_user,update_time
        from
            tb_user_manager
        where 1 = 1
          AND user_name = #{tgUserName}

    </select>
</mapper>
